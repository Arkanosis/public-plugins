use strict;
use warnings;
no warnings 'uninitialized';

use SiteDefs;

warn "Starting nginx...\n";

die "can't find nginx root, ENSEMBL_NGINX_ROOT is not defined"
  unless defined $SiteDefs::ENSEMBL_NGINX_ROOT;

die "nginx root '$SiteDefs::ENSEMBL_NGINX_ROOT' does not exists"
  unless -d $SiteDefs::ENSEMBL_NGINX_ROOT;

die "file $SiteDefs::ENSEMBL_NGINX_ROOT/conf/nginx.conf does not exists"
  unless -e $SiteDefs::ENSEMBL_NGINX_ROOT . '/conf/nginx.conf';

my $prefix = "$SiteDefs::ENSEMBL_NGINX_CMDPREFIX " || "";

my $version_string = qx($SiteDefs::ENSEMBL_NGINX_EXE -v 2>&1);
$version_string =~ m!nginx/(\S+)!;
my $version = $1;

my $extra = "";
if($version =~ /^1\./) {
  system("ln -s $SiteDefs::ENSEMBL_LOGDIR $SiteDefs::ENSEMBL_LOGDIR/logs 2>/dev/null");
  $extra .= "-p $SiteDefs::ENSEMBL_LOGDIR";
}
my $cmd = "$prefix $SiteDefs::ENSEMBL_NGINX_EXE -c $SiteDefs::ENSEMBL_NGINX_ROOT/conf/nginx.conf $extra";

system($cmd) == 0 or die " Could not start nginx server: $!.\n";

1;
